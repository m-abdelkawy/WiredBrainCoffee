<Window x:Class="WiredBrainCoffee.CustomersApp.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WiredBrainCoffee.CustomersApp"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="None" Background="#333333"
        WindowStartupLocation="CenterScreen"
        Title="SplashScreen" Height="450" Width="800">
    <StackPanel>
        <Image Source="/Assets/coffeeCup.png" Height="200" Width="200" VerticalAlignment="Top" />
        <TextBlock FontSize="30" TextAlignment="Center" Foreground="Black">
            Brain Coffee Management System
        </TextBlock>
        <TextBlock FontSize="20" TextAlignment="Center" Foreground="Black">
            Created by: ThinkDev Limited
        </TextBlock>
    </StackPanel>
</Window>
